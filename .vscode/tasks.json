{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Start client",
      "command": "ng",
      "args": ["serve"],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "ng",
      "label": "Run current client test",
      "args": ["test", "--include", "**/${fileBasename}", "--no-watch"],
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "ng",
      "label": "Run and watch current client test",
      "args": ["test", "--include", "**/${fileBasename}"],
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "ng",
      "label": "Run client tests",
      "args": ["test", "--no-watch"],
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Start server",
      "command": "mvn",
      "args": ["spring-boot:run", "-P", "local"],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Run server tests",
      "command": "mvn",
      "args": ["test"],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Compile server",
      "command": "mvn",
      "args": ["compile"],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Start e2e environment",
      "command": "node",
      "args": [
        "docker-compose.js",
        "|",
        "docker",
        "compose",
        "--file",
        "-",
        "up",
        "--force-recreate",
        "--build",
        "--remove-orphans",
        "--wait",
        "--pull",
        "always"
      ],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/test"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Run e2e tests",
      "command": "mvn",
      "args": ["test"],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/test"
      },
      "problemMatcher": []
    },
  ]
}
