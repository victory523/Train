{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Start client",
      "command": "ng",
      "args": ["serve"],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "ng",
      "label": "Run current client test",
      "args": [
        "test",
        "--include",
        "**/${fileBasename}",
        "--no-watch"
      ],
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "ng",
      "label": "Run and watch current client test",
      "args": [
        "test",
        "--include",
        "**/${fileBasename}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    }
  ]
}
